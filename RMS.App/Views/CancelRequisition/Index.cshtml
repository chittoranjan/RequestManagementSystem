@model IEnumerable<RMS.App.ViewModels.CancelRequisitionViewModel>

@{
    ViewBag.Title = "Cancelled Requisition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css" />
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.semanticui.min.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap.min.css" rel="stylesheet" />

}
<h2>Cancelled Requisition</h2>

<table id="example" class="table table-striped table-bordered table-hover dt-responsive nowrap" style="width: 100%">
    <thead>
    <tr class="bg-info">
        <th>
            SL
        </th>
        <th>
            Action
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.RequisitionNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.Employee.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.FromPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.DestinationPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.StartDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.EndDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.SubmitDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.StatusType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        
    </tr>

    </thead>
    <tbody>
    @{
        var sl = 0;
        if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                sl++;
                <tr>
                    <td>
                        @sl

                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new {id = item.RequisitionId}) |*@
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                        @*@Html.ActionLink("Feedback", "Feedback", new {requisitionId = item.Id})*@

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequisitionStatus.Requisition.RequisitionNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequisitionStatus.Requisition.Employee.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequisitionStatus.Requisition.FromPlace)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequisitionStatus.Requisition.DestinationPlace)
                    </td>
                    <td>
                        @item.RequisitionStatus.Requisition.StartDateTime.ToString("dd MMM yyyy hh:mm tt")
                    </td>
                    <td>
                        @item.RequisitionStatus.Requisition.EndDateTime.ToString("dd MMM yyyy hh:mm tt")
                    </td>
                    <td>
                        @item.RequisitionStatus.Requisition.SubmitDateTime.ToString("dd MMM yyyy hh:mm tt")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequisitionStatus.StatusType, new {@class = "text-danger"})
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reason, new {@class = "text-danger"})
                    </td>
                    
                </tr>
            }
        }
    }
    </tbody>
    <tfoot>
    <tr class="bg-secondary text-white">
        <th>
            SL
        </th>
        <th>
            Action
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.RequisitionNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.Employee.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.FromPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.DestinationPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.StartDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.EndDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.SubmitDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionStatus.StatusType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        
    </tr>
    </tfoot>
</table>
    
@section scripts
{

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.semanticui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>

    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}