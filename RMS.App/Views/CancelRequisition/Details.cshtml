@model RMS.App.ViewModels.CancelRequisitionViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br/>
    <h4> Reason of Cancel :</h4>
    <br/>
    <table class="table table-bordered">
        <tr>
            @*<td>@Html.DisplayNameFor(model => model.Reason)</td>*@
            <td class="text-danger">@Html.DisplayFor(model => model.Reason)</td>
        </tr>
    </table>
    
</div>
<div class="row">
    
    <div class="col-md-6">
        <br/>
        <h4>Journey Info :</h4>
        <br/>
        <table class="table table-bordered">
            <tr>
                <td style="width: 35%">@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.FromPlace)</td>
                <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.FromPlace)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.DestinationPlace)</td>
                <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.DestinationPlace)</td>
            </tr>
            <tr>
                <td >@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.StartDateTime)</td>
                <td>@Model.Requisition.StartDateTime.ToString("dd MMM yyyy hh:mm tt")</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.EndDateTime)</td>
                <td>@Model.RequisitionStatus.Requisition.EndDateTime.ToString("dd MMM yyyy hh:mm tt")</td>
            </tr>

            <tr>
                <td>@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.PassengerQty)</td>
                <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.PassengerQty)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.Description)</td>
                <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.Description)</td>
            </tr>

        </table>

    </div>

    <div class="col-md-6">

        <br/>
        <h4>Requestor Information :</h4>
        <br/>
        <table class="table table-bordered">

            <tr>
                <td>@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.RequisitionNumber)</td>
                <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.RequisitionNumber)</td>
            </tr>
            <tr>
                <td>@Html.DisplayName("Requestor Name")</td>
                <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.Employee.FullName)</td>
            </tr>
            <tr>
                <td>@Html.DisplayName("Designation")</td>
                <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.Employee.Designation.Title)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.Employee.ContactNo)</td>
                <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.Employee.ContactNo)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.Employee.Email)</td>
                <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.Employee.Email)</td>
            </tr>
            @if (@Model.Requisition.RequestFor != "Own")
            {
                <tr>
                    <td>@Html.DisplayNameFor(model => model.RequisitionStatus.Requisition.RequestFor)</td>
                    <td>@Html.DisplayFor(model => model.RequisitionStatus.Requisition.RequestFor)</td>
                </tr>
            }
            
        </table>
    </div>

</div>
<p>

    @*@Html.ActionLink("Edit", "Edit", new { @id = Model.Id }, new { @class = "btn btn-warning" })*@ &nbsp;
    @Html.ActionLink("Back to List", "Index", null, new {@class = "btn btn-info"})
</p>
