
@{
    Layout = null;
}
<ul>

    <li class="dropdown">
        @if (@ViewBag.count > 0)
        {
            <a title="Unread notifications!" class="btn-outline-info" data-toggle="dropdown"><i class="fa fa-bell"></i><span class="text-danger font-weight-bold" style="font-size: 16px;">@ViewBag.count</span></a>
        }
        else
        {
            <a title="You have no unread notifications!" class="btn-outline-info" data-toggle="dropdown"><i class="fa fa-bell"></i><span class="font-weight-bold" style="font-size: 16px;"></span></a>
        }

        <ul class="dropdown-menu">
            <li style="padding: 0 5px;"> New</li>
            <hr />
            @if (ViewBag.Notification != null)
            {
                var notify = ViewBag.Notification;

                foreach (var dt in notify)
                {
                    <li style="padding: 0 5px;"><a href="@Url.Action("Details", "Requisitions", new {@id = dt.RequisitionId})" class="text-black">Mr. @dt.Employee.FullName &nbsp; @dt.SenderText &nbsp; Req No: @dt.Requisition.RequisitionNumber &nbsp; @dt.SenderNotifyDateTime.ToString("hh:mm tt")</a></li>
                                        <hr />
                }

            }
            <li class="text-center"><a href="@Url.Action("Index","Notifications")">See All</a></li>
        </ul>
    </li>
</ul>

