@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "clear" }))
    {

    @Html.AntiForgeryToken()

        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                @Html.ActionLink("  " + User.Identity.GetUserName() + "!", "Index", "Account", routeValues: null, htmlAttributes: new { title = User.Identity.GetUserName() })
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink(@Resources.HomeText.MyProfile, "Index", "Account")</li>
               
                    <li>@Html.ActionLink(@Resources.HomeText.MyRequest, "Create", "Requisitions")</li>
             
                <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.HomeText.LogOut</a></li>
            </ul>
        </div>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(  @Resources.HomeText.LogIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-sm btn-outline-info bg-transparent text-white fa fa-user" })</li>

    </ul>

        
        
    
}
