
@{
    ViewBag.Title = "Requisition Queue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Requisition Queue</h2>
<br/>
<ol class="breadcrumb">
    
    <li class="breadcrumb-item active">My Dashboard</li>
</ol>
<!-- Icon Cards-->
<div class="row">

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-list"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.RequisitionStatusCount</h3>
                     New Requisition
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Requests", "AssignRequisitions",new {requisitionId=0})">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-list"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.AssignedRequisition</h3>
                    Assigned Requisition
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "AssignRequisitions")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-secondary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-support"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.OnProcessRequest</h3> 
                    On Process Request
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("OnProcess", "AssignRequisitions")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-calendar-check-o"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.CompleteRequisition</h3>
                    Today's Completed Requisition
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("CompleteRequest", "AssignRequisitions")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    
</div>
<!-- Area Chart Example-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-user"></i> Total Registered Employee
    </div>
    <div class="card-body">
            <p>
                <span class="font-weight-bold" style="font-size: 18px;">@ViewBag.EmployeeCount</span> Total Employee Has been Registered 
                <a href="@Url.Action("GetAllEmployee", "Employees")">View Details</a>
                <br />
                <span class="font-weight-bold" style="font-size: 18px;">@ViewBag.DriverCount</span> Total Driver Registered
                <a href="@Url.Action("GetAllDriver", "Employees")">View Details</a>
            </p>
    </div>
    <div class="card-footer small text-muted">Updated @DateTime.Now</div>
</div>
<div class="row">
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-car" aria-hidden="true"></i>
                    </div>
                    <div class="mr-5">
                        <h3>@ViewBag.VehicleCount</h3> 
                        Total registered vehicle
                    </div>
                </div>

                <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "Vehicles")">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-warning o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-car"></i>
                    </div>
                    <div class="mr-5">
                        <h3 >@ViewBag.VehicleTypeCount</h3> 
                        Total Vehicle Type
                    </div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "VehicleTypes")">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
    
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-secondary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-table"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.AllRequisitionCount</h3> 
                    Totla Requisition
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "Requisitions")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-trash-o"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.CancelRequisition</h3> 
                    Cancelled Requisition
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "CancelRequisition")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
        
</div>
<!-- /.container-fluid-->
<!-- /.content-wrapper-->


