
@{
    ViewBag.Title = "Setup Queue";
    Layout = "~/Views/Shared/_LayoutSetupAll.cshtml";
}

<h2>Setup Queue</h2>
<br/>

<ol class="breadcrumb">
    <li class="breadcrumb-item active">My Dashboard</li>
</ol>
<!-- Icon Cards-->
<div class="row">

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-university"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.OrganizationCount</h3> Total Organization!
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "Organizations")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-briefcase"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.DepartmentCount</h3> Totla Department!</div>
            </div>

            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "Departments")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-graduation-cap"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.DesignationCount</h3> Total Designation!</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "Designations")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-info o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-user"></i>
                </div>
                <div class="mr-5">
                    <h3>@ViewBag.EmployeeTypeCount</h3> Totla Employee Type!</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "EmployeeTypes")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>
<!-- Area Chart Example-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-user"></i> Total Registered Employee
    </div>
    <div class="card-body">
        <p>
            @ViewBag.EmployeeCount Total Employee Has been Registered
            <a href="@Url.Action("GetAllEmployee", "Employees")">View Details</a>
            <br />
            @ViewBag.DriverCount Total Driver Registered
            <a href="@Url.Action("GetAllDriver", "Employees")">View Details</a>
        </p>
    </div>
    <div class="card-footer small text-muted">Updated @DateTime.Now</div>
</div>
<div class="row">
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-car" aria-hidden="true"></i>
                </div>
                <div class="mr-5">
                    <h3 >@ViewBag.VehicleCount</h3> Total Vehicle!
                </div>
            </div>

            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "Vehicles")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-secondary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-car"></i>
                </div>
                <div class="mr-5">
                    <h3 >@ViewBag.VehicleTypeCount</h3> Total Vehicle Type!
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index", "VehicleTypes")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-user"></i>
                </div>
                <div class="mr-5">
                    <h3 >@ViewBag.EmployeeCount</h3> Totla Registered Employee!
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("GetAllEmployee", "Employees")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-info o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-user"></i>
                </div>
                <div class="mr-5">
                    <h3 >@ViewBag.DriverCount</h3> Total Registered Driver!
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("GetAllDriver", "Employees")">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>
<!-- /.container-fluid-->
<!-- /.content-wrapper-->
